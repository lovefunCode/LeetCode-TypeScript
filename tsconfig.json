{
  "compilerOptions": {
    "target": "ES2024",  // You can target ES6 or higher
    "module": "ES2020",  // or "esnext" based on your project setup
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": ["ES2024", "DOM"], // Add ES6 or later
  },
  "include": [
    "ArrayString/**/*.ts", // Adjust this path to include all TypeScript files in the ArrayString folder
    "HashMap/**/*.ts",  // Adjust this path to include all TypeScript files in the HashMap folder
    "DynamicProgramming/**/*.ts",  // Adjust this path to include all TypeScript files in the DynamicProgramming folder
    "BinarySearch/**/*.ts",  // Adjust this path to include all TypeScript files in the BinarySearch folder
    "BinaryTree/**/*.ts",  // Adjust this path to include all TypeScript files in the BinaryTree folder
    "SlidingWindow/**/*.ts",  // Adjust this path to include all TypeScript files in the SlidingWindow folder
    "Matrix/**/*.ts",  // Adjust this path to include all TypeScript files in the Matrix folder
    "Stack/**/*.ts",  // Adjust this path to include all TypeScript files in the Stack folder
    "TwoPointers/**/*.ts",  // Adjust this path to include all TypeScript files in the TwoPointers folder
    "DFS/**/*.ts",  // Adjust this path to include all TypeScript files in the DFS folder
    "BFS/**/*.ts", "BinaryTree/BST.js", "DFS/numOfMinutes.js",  // Adjust this path to include all TypeScript files in the BFS folder
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules from the compilation

  ]
}
